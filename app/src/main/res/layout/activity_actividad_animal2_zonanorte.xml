<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/atacama">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="220dp"
        android:id="@+id/marcoAnimal2_zonanorte_act"
        android:layout_gravity="start|center_vertical"
        android:background="@drawable/marco"
        android:layout_marginLeft="77dp" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:id="@+id/animal2_zonanorte_act"
        android:layout_gravity="center|left"
        android:layout_marginLeft="100dp"
        android:background="@drawable/zorro"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/marcoComidaNorte2a"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:background="@drawable/marco" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/alternativa1_zonanorte_2"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="7dp"
        android:id="@+id/marcoComidaNorte2b"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/marco" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/alternativa2_zonanorte_2"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="25dp"
        />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="38dp"
        android:id="@+id/marcoComidaNorte2c"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/marco"
        />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/alternativa3_zonanorte_2"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="40dp"
        />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="7dp"
        android:id="@+id/marcoComidaNorte2d"
        android:layout_gravity="right|bottom"
        android:background="@drawable/marco"
        />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/alternativa4_zonanorte_2"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="25dp"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/reproComidaNorte2"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="35dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bsound"
        />

    <ImageButton
        android:id="@+id/comparar_norte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/comparar1_norte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/comparar2_norte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/barra_zona_centro"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/marco" />

    <TextView
        android:id="@+id/medallas_norte2"
        android:layout_width="377dp"
        android:layout_height="111dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/rounded_edittext"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="106dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/marco_avatarbupa"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--<com.github.snowdream.android.widget.SmartImageView
    android:layout_width="114dp"
    android:layout_height="85dp"
    android:id="@+id/avatarAlumMR"
    android:clickable="true"
    android:layout_gravity="left|top"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp" />-->

    <ImageButton
        android:id="@+id/salir_animal2_zonanorte"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="30dp"
        android:background="@drawable/marco_avatarbupa"
        android:src="@drawable/exit" />

    <ProgressBar
        android:id="@+id/pbbar_zorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="60dp"
        />


</FrameLayout>
