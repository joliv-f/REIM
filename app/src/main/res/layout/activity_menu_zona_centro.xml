<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/zona_centro"
    tools:context="com.example.joliv.anchi13.menu_zona_centro">

    <ImageView
        android:id="@+id/marcoAnimal1_zonacentro"
        android:layout_width="222dp"
        android:layout_height="170dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="105dp"
        android:background="@drawable/marco" />

    <ImageButton
        android:id="@+id/animal1_zonacentro"
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/condor"

        />

    <ImageView
        android:id="@+id/marcoAnimal2_zonacentro"
        android:layout_width="222dp"
        android:layout_height="170dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"
        android:background="@drawable/marco" />

    <ImageButton
        android:id="@+id/animal2_zonacentro"
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:adjustViewBounds="false"
        android:background="@drawable/puma" />

    <ImageView
        android:id="@+id/marcoAnimal3_zonacentro"
        android:layout_width="222dp"
        android:layout_height="170dp"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="135dp"
        android:background="@drawable/marco" />

    <ImageButton
        android:id="@+id/animal3_zonacentro"
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="150dp"
        android:adjustViewBounds="false"
        android:background="@drawable/rana"
        />


    <TextView
        android:id="@+id/barra_zona_centro"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/marco_actividad1" />

    <TextView
        android:id="@+id/medallas_menucentro"
        android:layout_width="377dp"
        android:layout_height="111dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/medallas1"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="106dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/marco_avatarbupa"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--<com.github.snowdream.android.widget.SmartImageView
    android:layout_width="114dp"
    android:layout_height="85dp"
    android:id="@+id/avatarAlumMR"
    android:clickable="true"
    android:layout_gravity="left|top"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp" />-->

    <ImageButton
        android:id="@+id/salir_menuzonacentro"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="30dp"
        android:background="@drawable/marco_avatarbupa"
        android:src="@drawable/exit"
        />


</FrameLayout>
