<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joliv.anchi13.login">

    <TextView
        android:id="@+id/ALUMNOS"
        android:layout_width="800dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center|bottom"
        android:background="@drawable/login" />

    <EditText
        android:id="@+id/texto_pass"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/texto_user"
        android:layout_below="@+id/pass_login"
        android:layout_gravity="center"
        android:background="@android:color/holo_orange_light"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/usuario_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/texto_pass"
        android:layout_alignEnd="@+id/pass_login"
        android:layout_gravity="center|left"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="39dp"
        android:text="USUARIO:"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/pass_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ALUMNOS"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|center"
        android:layout_marginStart="20dp"
        android:text="CONTRASEÃ‘A:"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/texto_user"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_below="@+id/volvervlogin"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_toEndOf="@+id/pass_login"
        android:background="@android:color/holo_orange_light"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/ingresar_login"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/usuario_login"
        android:layout_below="@+id/texto_pass"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:text="INGRESAR"
        android:textSize="50sp" />

    <Button
        android:id="@+id/volvervlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|right"
        android:layout_marginTop="15dp"
        android:background="@drawable/exit" />


</FrameLayout>
